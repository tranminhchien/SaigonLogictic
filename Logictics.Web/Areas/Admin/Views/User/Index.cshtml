@model List<Logictics.Service.ViewModel.UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!-- User Index -->
@section extendCSS{

}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Customer</h1>
                </div><!-- /.col -->
               
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <section class="content">
        <!-- Main row -->
        <div class="row">
            <div class="col-sm-12">
                <!-- /.card -->
                <div class="card">
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>UserName</th>
                                    <th>Created Date</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                <tr>
                                    <td>@item.UserName</td>
                                    
                                    <td data-order='@String.Format("{0:yyyy MM dd HH:mm:ss}", item.CreateDate)'>
                                        @String.Format("{0:dd MMM yyyy HH:mm:ss}", item.CreateDate)<br />
                                    </td>

                                    <td>@item.Status</td>
                                    <td>
                                        @if (item.Status == "ACTIVE")
                                        {
                                            <a href="/Admin/User/UpdateStatus/@item.Id" class="btn btn-danger btn-sm"  type="button">Inactive</a>
                                            @*<a href="#" class="btn btn-danger btn-sm"  type="button">Deactive</a>*@
                                        }
                                        else
                                        {
                                            <a href="/Admin/User/UpdateStatus/@item.Id" class="btn btn-info btn-sm"  type="button">Active</a>
                                            @*<a href="#" class="btn btn-info btn-sm"  type="button">Active</a>*@
                                        }
                                    </td>
                                </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>UserName</th>
                                    <th>Created Date</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                    <!-- /.card-body -->

                </div>
                <!-- /.card -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@section extendScripts{
    <!-- page script -->
    <script>
        $(function () {
            initEsuDatatables($('#example1'), 10, "desc", 1, true, true);
        });
    </script>
}



