@model List<Logictics.Service.ViewModel.OrderClientReponse>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="slider bg-navy-blue bg-fixed pos-rel breadcrumbs-page">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="icofont-home"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page">Tìm Kiếm</li>
            </ol>
        </nav>

        <h1>Danh Sách Đơn Hàng</h1>
        <div class="breadcrumbs-description">
            SG EXPRESS VẬN CHUYỂN HÀNG HÓA VÀ KIỀU HỐI
        </div>
    </div>
</div>

<main id="body-content">

    <section class="mt-3 mb-3">
      
            <div class="col-sm-12">
                <!-- /.card -->
                <div class="card">
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Mã Đơn Hàng</th>
                                    <th>Ngày Tạo</th>
                                    <th>Trạng Thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><a href="/client/HomeClient/OrderDetail/@item.orderID">@item.orderID</a></td>

                                            <td data-order='@String.Format("{0:yyyy MM dd HH:mm:ss}", item.createDate)'>
                                                @String.Format("{0:dd MMM yyyy HH:mm:ss}", item.createDate)<br />
                                            </td>

                                            <td>@item.orderStatus</td>

                                        </tr>
                                    }
                                }
                                else
                                {
                                        <tr><td colspan="3">Không có dữ liệu cho số điện thoại này</td></tr>
                                }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Mã Đơn Hàng</th>
                                        <th>Ngày Tạo</th>
                                        <th>Trạng Thái</th>
                                    </tr>
                                </tfoot>
                            </table>

                    </div>
                    <!-- /.card-body -->

                </div>
                <!-- /.card -->
            </div>
            <!-- /.row (main row) -->
        
    </section>

</main>

